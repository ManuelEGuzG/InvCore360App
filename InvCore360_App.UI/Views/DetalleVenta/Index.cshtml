@model IEnumerable<InvCore360_App.Model.Models.DetalleVenta>

@{
    ViewData["Title"] = "Detalles de Venta";
}

<h1>Detalles de Venta</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Agregar Detalle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Venta</th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>PrecioUnitario</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Venta?.NumeroVenta</td>
            <td>@item.Producto?.Nombre</td>
            <td>@item.Cantidad</td>
            <td>@item.PrecioUnitario.ToString("C")</td>
            <td>@item.Total.ToString("C")</td>
            <td>
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.DetalleVentaID">Details</a>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.DetalleVentaID">Edit</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.DetalleVentaID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>