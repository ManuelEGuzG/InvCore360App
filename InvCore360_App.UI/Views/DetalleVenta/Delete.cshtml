@model InvCore360_App.Model.Models.DetalleVenta

@{
    ViewData["Title"] = "Eliminar DetalleVenta";
}

<h1>Eliminar Detalle</h1>

<dl class="row">
    <dt class="col-sm-2">Venta</dt>
    <dd class="col-sm-10">@Model.Venta?.NumeroVenta</dd>

    <dt class="col-sm-2">Producto</dt>
    <dd class="col-sm-10">@Model.Producto?.Nombre</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="DetalleVentaID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>