@model InvCore360_App.Model.Models.DetalleVenta

@{
    ViewData["Title"] = "Detalle DetalleVenta";
}

<h1>Detalle</h1>

<dl class="row">
    <dt class="col-sm-2">Venta</dt>
    <dd class="col-sm-10">@Model.Venta?.NumeroVenta</dd>

    <dt class="col-sm-2">Producto</dt>
    <dd class="col-sm-10">@Model.Producto?.Nombre</dd>

    <dt class="col-sm-2">Cantidad</dt>
    <dd class="col-sm-10">@Model.Cantidad</dd>

    <dt class="col-sm-2">Precio Unitario</dt>
    <dd class="col-sm-10">@Model.PrecioUnitario.ToString("C")</dd>

    <dt class="col-sm-2">Total</dt>
    <dd class="col-sm-10">@Model.Total.ToString("C")</dd>
</dl>

<a class="btn btn-secondary" asp-action="Index">Back to List</a>