@model InvCore360_App.Model.Models.Producto

@{
    ViewData["Title"] = "Detalles Producto";
}

<h1>Detalles</h1>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Codigo</dt>
        <dd class = "col-sm-10">@Model.CodigoBarras</dd>

        <dt class = "col-sm-2">Nombre</dt>
        <dd class = "col-sm-10">@Model.Nombre</dd>

        <dt class = "col-sm-2">Descripcion</dt>
        <dd class = "col-sm-10">@Model.Descripcion</dd>

        <dt class = "col-sm-2">Precio Venta</dt>
        <dd class = "col-sm-10">@Model.PrecioVenta.ToString("C")</dd>

        <dt class = "col-sm-2">Stock Actual</dt>
        <dd class = "col-sm-10">@Model.StockActual</dd>
    </dl>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>