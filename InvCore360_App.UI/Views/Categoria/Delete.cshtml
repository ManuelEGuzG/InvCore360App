@model InvCore360_App.Model.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoria";
}

<h1>Eliminar Categoria</h1>

<h3>¿Está seguro que desea eliminar esta categoría?</h3>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Nombre</dt>
        <dd class = "col-sm-10">@Model.Nombre</dd>

        <dt class = "col-sm-2">Descripcion</dt>
        <dd class = "col-sm-10">@Model.Descripcion</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CategoriaID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>