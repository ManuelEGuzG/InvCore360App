@model InvCore360_App.Model.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoría";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="config-premium">
    <div class="config-hero mb-5">
        <div class="hero-pattern"></div>
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <div class="hero-content">
                        <div class="breadcrumb-badge mb-3">
                            <i class="bi bi-pencil-square"></i>
                            <span class="mx-2">/</span>
                            <span>Categorías</span>
                            <span class="mx-2">/</span>
                            <span>Editar</span>
                        </div>
                        <h1 class="display-5 fw-bold mb-2 gradient-text">
                            Modificar Categoría
                        </h1>
                        <p class="lead text-muted mb-0">Actualiza los datos de clasificación para mantener tu inventario al día.</p>
                    </div>
                </div>
                <div class="col-lg-4 text-lg-end mt-4 mt-lg-0">
                    <div class="id-badge">
                        <span class="text-muted small">ID DE CATEGORÍA</span>
                        <h4 class="mb-0 fw-bold text-primary">#@Model.CategoriaID</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-xl-8">
            <div class="table-card p-4 p-md-5">
                <form asp-action="Edit" method="post" class="premium-form">
                    <input type="hidden" asp-for="CategoriaID" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                    <div class="row g-4">
                        <div class="col-12">
                            <div class="form-group-premium">
                                <label asp-for="Nombre" class="form-label-premium">
                                    <i class="bi bi-tag-fill me-2"></i>Nombre de la Categoría
                                </label>
                                <input asp-for="Nombre" class="form-control form-input-premium" placeholder="Nombre de la categoría..." />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group-premium">
                                <label asp-for="Descripcion" class="form-label-premium">
                                    <i class="bi bi-justify-left me-2"></i>Descripción
                                </label>
                                <textarea asp-for="Descripcion" class="form-control form-input-premium" rows="4" placeholder="Actualiza la descripción aquí...">@Model.Descripcion</textarea>
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="status-selector-card shadow-sm">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="item-icon @(Model.Activo ? "icon-success" : "icon-warning")">
                                            <i class="bi @(Model.Activo ? "bi-check-circle" : "bi-exclamation-circle")"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-bold">Estado del Registro</h6>
                                            <p class="text-muted small mb-0">Si se desactiva, no aparecerá en las selecciones de nuevos productos.</p>
                                        </div>
                                    </div>
                                    <div class="form-check form-switch custom-switch">
                                        <input asp-for="Activo" class="form-check-input" type="checkbox" id="switchEstado">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 mt-5">
                            <div class="d-flex flex-column flex-md-row gap-3">
                                <button type="submit" class="btn-premium flex-grow-1 justify-content-center">
                                    <span class="btn-glow"></span>
                                    <i class="bi bi-arrow-repeat me-2"></i>Actualizar Cambios
                                </button>
                                <a asp-action="Index" class="btn-cancel">
                                    <i class="bi bi-x-circle me-2"></i>Descartar
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos específicos para la edición */
    .id-badge {
        background: #f1f5f9;
        padding: 1rem 1.5rem;
        border-radius: 16px;
        display: inline-block;
        border: 1px dashed #cbd5e1;
    }

    .form-input-premium {
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        padding: 0.8rem 1rem;
        transition: all 0.3s ease;
        background-color: #f8fafc;
    }

        .form-input-premium:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
            background-color: #fff;
        }

    .form-label-premium {
        font-weight: 600;
        color: #475569;
        margin-bottom: 0.5rem;
        display: block;
    }

    .status-selector-card {
        background: white;
        border: 2px solid #f1f5f9;
        border-radius: 16px;
        padding: 1.5rem;
    }

    .icon-success {
        background: #d1fae5;
        color: #059669;
    }

    .icon-warning {
        background: #fff3cd;
        color: #856404;
    }

    .custom-switch .form-check-input {
        width: 3.5rem;
        height: 1.75rem;
        cursor: pointer;
    }

        .custom-switch .form-check-input:checked {
            background-color: var(--success);
            border-color: var(--success);
        }

    .btn-cancel {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 1rem 2rem;
        border-radius: 16px;
        font-weight: 600;
        color: #64748b;
        background: #f1f5f9;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: #e2e8f0;
            color: #0f172a;
        }

    .premium-form {
        animation: fadeInUp 0.8s ease-out;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Efecto visual para el switch al cambiar de estado
        document.getElementById('switchEstado')?.addEventListener('change', function() {
            const iconDiv = this.closest('.status-selector-card').querySelector('.item-icon');
            const icon = iconDiv.querySelector('i');

            if(this.checked) {
                iconDiv.className = 'item-icon icon-success';
                icon.className = 'bi bi-check-circle';
            } else {
                iconDiv.className = 'item-icon icon-warning';
                icon.className = 'bi bi-exclamation-circle';
            }
        });
    </script>
}