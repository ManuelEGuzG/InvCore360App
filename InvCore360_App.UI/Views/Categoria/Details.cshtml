@model InvCore360_App.Model.Models.Categoria

@{
    ViewData["Title"] = "Detalles Categoria";
}

<h1>Detalles</h1>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Nombre</dt>
        <dd class = "col-sm-10">@Model.Nombre</dd>

        <dt class = "col-sm-2">Descripcion</dt>
        <dd class = "col-sm-10">@Model.Descripcion</dd>

        <dt class = "col-sm-2">Activo</dt>
        <dd class = "col-sm-10">@(Model.Activo ? "Sí" : "No")</dd>

        <dt class = "col-sm-2">Fecha Creacion</dt>
        <dd class = "col-sm-10">@Model.FechaCreacion.ToString("g")</dd>
    </dl>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>