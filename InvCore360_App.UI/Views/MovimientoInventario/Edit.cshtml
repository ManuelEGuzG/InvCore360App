@model InvCore360_App.Model.Models.MovimientoInventario

@{
    ViewData["Title"] = "Editar Movimiento";
}

<h1>Editar Movimiento</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MovimientoID" />
    <div class="form-group">
        <label asp-for="ProductoID"></label>
        <select asp-for="ProductoID" class="form-control" asp-items="ViewBag.Productos"></select>
    </div>
    <div class="form-group">
        <label asp-for="TipoMovimiento"></label>
        <select asp-for="TipoMovimiento" class="form-control">
            <option>Entrada</option>
            <option>Salida</option>
            <option>Ajuste</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Cantidad"></label>
        <input asp-for="Cantidad" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Motivo"></label>
        <input asp-for="Motivo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="VentaID"></label>
        <select asp-for="VentaID" class="form-control" asp-items="ViewBag.Ventas"></select>
    </div>
    <div class="form-group">
        <label asp-for="UsuarioID"></label>
        <select asp-for="UsuarioID" class="form-control" asp-items="ViewBag.Usuarios"></select>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}