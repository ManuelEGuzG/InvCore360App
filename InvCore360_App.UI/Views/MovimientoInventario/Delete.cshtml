@model InvCore360_App.Model.Models.MovimientoInventario

@{
    ViewData["Title"] = "Eliminar Movimiento";
}

<h1>Eliminar Movimiento</h1>

<dl class="row">
    <dt class="col-sm-2">Producto</dt>
    <dd class="col-sm-10">@Model.Producto?.Nombre</dd>

    <dt class="col-sm-2">Tipo</dt>
    <dd class="col-sm-10">@Model.TipoMovimiento</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MovimientoID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>