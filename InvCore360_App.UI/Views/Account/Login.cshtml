@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InvCore360</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        :root {
            --primary: #6366f1;
            --primary-dark: #4f46e5;
            --purple: #8b5cf6;
            --shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            --shadow-lg: 0 20px 60px rgba(0, 0, 0, 0.12);
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }

        .login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .login-card {
            background: white;
            border-radius: 28px;
            box-shadow: var(--shadow-lg);
            overflow: hidden;
            max-width: 1000px;
            width: 100%;
            position: relative;
            animation: fadeInUp 0.6s ease-out;
        }

        keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-left {
            background: linear-gradient(135deg, var(--primary) 0%, var(--purple) 100%);
            padding: 4rem;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .login-pattern {
            position: absolute;
            top: -50px;
            right: -50px;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
            border-radius: 50%;
        }

        .login-pattern-2 {
            position: absolute;
            bottom: -100px;
            left: -100px;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.08) 0%, transparent 70%);
            border-radius: 50%;
        }

        .login-left-content {
            position: relative;
            z-index: 1;
        }

        .brand-logo {
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            margin-bottom: 2rem;
            backdrop-filter: blur(10px);
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
            padding: 1rem;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            backdrop-filter: blur(10px);
        }

        .feature-icon {
            width: 45px;
            height: 45px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            flex-shrink: 0;
        }

        .login-right {
            padding: 4rem;
        }

        .login-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .login-title {
            font-size: 2rem;
            font-weight: 800;
            background: linear-gradient(135deg, var(--primary) 0%, var(--purple) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
        }

        .login-subtitle {
            color: #64748b;
            font-size: 1rem;
        }

        .form-floating {
            margin-bottom: 1.5rem;
        }

        .form-control {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 1rem 1.25rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            height: auto;
        }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
            }

        .form-label {
            color: #475569;
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .input-group {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            font-size: 1.25rem;
            z-index: 10;
        }

        .input-with-icon {
            padding-left: 3rem;
        }

        .btn-login {
            background: linear-gradient(135deg, var(--primary) 0%, var(--purple) 100%);
            border: none;
            border-radius: 12px;
            padding: 1rem 2rem;
            font-weight: 600;
            font-size: 1rem;
            color: white;
            width: 100%;
            transition: all 0.3s ease;
            box-shadow: 0 8px 20px rgba(99, 102, 241, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

            .btn-login:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 30px rgba(99, 102, 241, 0.4);
                color: white;
            }

        .alert {
            border-radius: 12px;
            border: none;
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .alert-danger {
            background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
            color: #dc2626;
        }

        .security-badge {
            text-align: center;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 2px solid #f1f5f9;
        }

            .security-badge i {
                color: var(--primary);
                font-size: 1.25rem;
                margin-right: 0.5rem;
            }

        .time-badge {
            background: rgba(255, 255, 255, 0.2);
            padding: 0.75rem 1.25rem;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            backdrop-filter: blur(10px);
            margin-top: 2rem;
        }

        .time-icon {
            width: 35px;
            height: 35px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        media (max-width: 991px) {
            .login-left {
                display: none;
            }

            .login-right {
                padding: 2rem;
            }
        }

        media (max-width: 576px) {
            .login-card {
                border-radius: 20px;
            }

            .login-right {
                padding: 1.5rem;
            }

            .login-title {
                font-size: 1.5rem;
            }

            .btn-login {
                padding: 0.875rem 1.5rem;
            }
        }

        /* Loading animation */
        .btn-login:active {
            transform: scale(0.98);
        }

        /* Smooth transitions */
        * {
            transition: all 0.2s ease;
        }

        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus {
            -webkit-box-shadow: 0 0 0 30px white inset !important;
            -webkit-text-fill-color: #0f172a !important;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="row g-0">
                <!-- Left Side - Brand & Features -->
                <div class="col-lg-6 login-left">
                    <div class="login-pattern"></div>
                    <div class="login-pattern-2"></div>
                    <div class="login-left-content">
                        <div class="brand-logo">
                            <i class="bi bi-box-seam-fill"></i>
                        </div>
                        <h1 class="display-5 fw-bold mb-3">InvCore360</h1>
                        <p class="lead mb-4">Sistema integral de gestión de inventario y control empresarial</p>

                        <div class="mt-5">
                            <div class="feature-item">
                                <div class="feature-icon">
                                    <i class="bi bi-shield-check"></i>
                                </div>
                                <div>
                                    <strong class="d-block">Seguro y Confiable</strong>
                                    <small>Protección de datos avanzada</small>
                                </div>
                            </div>
                            <div class="feature-item">
                                <div class="feature-icon">
                                    <i class="bi bi-graph-up"></i>
                                </div>
                                <div>
                                    <strong class="d-block">Análisis en Tiempo Real</strong>
                                    <small>Métricas y reportes instantáneos</small>
                                </div>
                            </div>
                            <div class="feature-item">
                                <div class="feature-icon">
                                    <i class="bi bi-people"></i>
                                </div>
                                <div>
                                    <strong class="d-block">Gestión Colaborativa</strong>
                                    <small>Trabajo en equipo eficiente</small>
                                </div>
                            </div>
                        </div>

                        <div class="time-badge">
                            <div class="time-icon">
                                <i class="bi bi-clock"></i>
                            </div>
                            <div class="text-start">
                                <small class="d-block opacity-75" style="font-size: 0.7rem;">Hora actual</small>
                                <strong class="d-block" id="currentTime" style="font-size: 0.9rem;">--:--:--</strong>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Side - Login Form -->
                <div class="col-lg-6 login-right">
                    <div class="login-header">
                        <h2 class="login-title">Iniciar Sesión</h2>
                        <p class="login-subtitle">Ingresa tus credenciales para acceder</p>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <div>
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div>@error.ErrorMessage</div>
                                }
                            </div>
                        </div>
                    }

                    <form method="post" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                        <div class="input-group">
                            <i class="bi bi-person-fill input-icon"></i>
                            <input name="nombreUsuario"
                                   type="text"
                                   class="form-control input-with-icon"
                                   placeholder="Ingresa tu nombre de usuario"
                                   required
                                   autofocus />
                        </div>

                        <div class="input-group">
                            <i class="bi bi-lock-fill input-icon"></i>
                            <input name="contrasena"
                                   type="password"
                                   class="form-control input-with-icon"
                                   placeholder="Ingresa tu contraseña"
                                   required />
                        </div>

                        <button class="btn btn-login" type="submit">
                            <i class="bi bi-box-arrow-in-right"></i>
                            <span>Iniciar Sesión</span>
                        </button>
                    </form>

                    <div class="security-badge">
                        <small class="text-muted">
                            <i class="bi bi-shield-lock-fill"></i>
                            Conexión segura y encriptada
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Actualizar hora cada segundo
        function updateTime() {
            const now = new Date();
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            const seconds = String(now.getSeconds()).padStart(2, '0');
            const timeStr = `${hours}:${minutes}:${seconds}`;

            const timeElement = document.getElementById('currentTime');
            if (timeElement) {
                timeElement.textContent = timeStr;
            }
        }

        updateTime();
        setInterval(updateTime, 1000);

        // Animación al enviar formulario
        document.querySelector('form').addEventListener('submit', function(e) {
            const btn = this.querySelector('.btn-login');
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Ingresando...';
            btn.disabled = true;
        });
    </script>
</body>
</html>