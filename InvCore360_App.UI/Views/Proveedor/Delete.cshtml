@model InvCore360_App.Model.Models.Proveedor

@{
    ViewData["Title"] = "Eliminar Proveedor";
}

<h1>Eliminar Proveedor</h1>

<h3>¿Está seguro que desea eliminar este proveedor?</h3>

<div>
    <h4>Proveedor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Nombre</dt>
        <dd class = "col-sm-10">@Model.Nombre</dd>

        <dt class = "col-sm-2">Contacto</dt>
        <dd class = "col-sm-10">@Model.Contacto</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProveedorID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>