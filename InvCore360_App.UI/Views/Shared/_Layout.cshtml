<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InvCore360</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InvCore360_App.UI.styles.css" asp-append-version="true" />

    <style>
        :root {
            --primary: #6366f1;
            --primary-dark: #4f46e5;
            --primary-light: #818cf8;
            --success: #10b981;
            --success-dark: #059669;
            --info: #3b82f6;
            --warning: #f59e0b;
            --danger: #ef4444;
            --purple: #8b5cf6;
            --dark: #0f172a;
            --gray: #64748b;
            --light-bg: #f8fafc;
            --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.05);
            --shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            --shadow-lg: 0 20px 60px rgba(0, 0, 0, 0.12);
            --nav-height: 80px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

            /* Animated Background */
            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: radial-gradient(circle at 20% 50%, rgba(99, 102, 241, 0.05) 0%, transparent 50%), radial-gradient(circle at 80% 80%, rgba(139, 92, 246, 0.05) 0%, transparent 50%);
                pointer-events: none;
                z-index: 0;
            }

        /* Premium Navbar */
        header {
            position: sticky;
            top: 0;
            z-index: 1000;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            box-shadow: var(--shadow-sm);
            border-bottom: none;
            animation: slideDown 0.5s ease-out;
        }

        keyframes slideDown {
            from {
                transform: translateY(-100%);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .navbar {
            padding: 1.25rem 0;
            border-bottom: none;
            background: transparent !important;
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.75rem;
            background: linear-gradient(135deg, var(--primary) 0%, var(--purple) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            transition: all 0.3s ease;
            letter-spacing: -0.5px;
            position: relative;
            padding-left: 3rem;
        }

            .navbar-brand::before {
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 40px;
                height: 40px;
                background: linear-gradient(135deg, var(--primary) 0%, var(--purple) 100%);
                border-radius: 12px;
                box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
            }

            .navbar-brand::after {
                content: '360';
                position: absolute;
                left: 8px;
                top: 50%;
                transform: translateY(-50%);
                color: white;
                font-size: 0.7rem;
                font-weight: 900;
            }

            .navbar-brand:hover {
                transform: translateX(3px);
            }

        .navbar-toggler {
            border: 2px solid var(--primary);
            border-radius: 12px;
            padding: 0.5rem 0.75rem;
            transition: all 0.3s ease;
        }

            .navbar-toggler:focus {
                box-shadow: 0 0 0 0.25rem rgba(99, 102, 241, 0.25);
            }

            .navbar-toggler:hover {
                background: linear-gradient(135deg, var(--primary) 0%, var(--purple) 100%);
            }

                .navbar-toggler:hover .navbar-toggler-icon {
                    filter: brightness(0) invert(1);
                }

        .navbar-nav {
            gap: 0.5rem;
        }

        .nav-item {
            position: relative;
        }

        .nav-link {
            color: var(--gray) !important;
            font-weight: 600;
            font-size: 0.95rem;
            padding: 0.75rem 1.25rem !important;
            border-radius: 12px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

            .nav-link::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(135deg, var(--primary) 0%, var(--purple) 100%);
                opacity: 0;
                transition: opacity 0.3s ease;
                z-index: -1;
            }

            .nav-link:hover {
                color: white !important;
                transform: translateY(-2px);
            }

                .nav-link:hover::before {
                    opacity: 1;
                }

            .nav-link.active {
                color: white !important;
                background: linear-gradient(135deg, var(--primary) 0%, var(--purple) 100%);
                box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
            }

        /* Main Content Area */
        .container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            padding-top: 2rem;
            padding-bottom: 3rem;
        }

        main {
            animation: fadeInUp 0.6s ease-out 0.2s backwards;
        }

        keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Mobile Responsive */
        media (max-width: 991px) {
            .navbar-collapse {
                background: white;
                margin-top: 1rem;
                padding: 1.5rem;
                border-radius: 16px;
                box-shadow: var(--shadow);
            }

            .navbar-nav {
                gap: 0.25rem;
            }

            .nav-link {
                padding: 1rem 1.25rem !important;
            }
        }

        media (max-width: 768px) {
            .navbar-brand {
                font-size: 1.5rem;
            }

            .container {
                padding-top: 1rem;
                padding-bottom: 2rem;
            }
        }

        /* Scrollbar Styling */
        ::-webkit-scrollbar {
            width: 12px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f5f9;
        }

        ::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, var(--primary) 0%, var(--purple) 100%);
            border-radius: 10px;
            border: 2px solid #f1f5f9;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: linear-gradient(135deg, var(--primary-dark) 0%, var(--purple) 100%);
            }

        /* Loading Animation */
        .page-loader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: var(--light-bg);
            z-index: 9999;
            overflow: hidden;
        }

            .page-loader::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, var(--primary) 0%, var(--purple) 100%);
                animation: loading 1.5s ease-in-out infinite;
            }

        keyframes loading {
            0% {
                left: -100%;
            }

            100% {
                left: 100%;
            }
        }

        /* Nav Icon Animations */
        .nav-link i {
            transition: transform 0.3s ease;
        }

        .nav-link:hover i {
            transform: scale(1.2) rotate(5deg);
        }

        .nav-link.active i {
            transform: scale(1.1);
        }
    </style>
</head>
<body>
    <div class="page-loader"></div>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid px-4">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">InvCore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-speedometer2 me-1"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Producto" asp-action="Index">
                                <i class="bi bi-box-seam me-1"></i> Productos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Categoria" asp-action="Index">
                                <i class="bi bi-grid-3x3-gap me-1"></i> Categorías
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Proveedor" asp-action="Index">
                                <i class="bi bi-truck me-1"></i> Proveedores
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Venta" asp-action="Index">
                                <i class="bi bi-cart-check me-1"></i> Ventas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="DetalleVenta" asp-action="Index">
                                <i class="bi bi-receipt me-1"></i> Detalles
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="MovimientoInventario" asp-action="Index">
                                <i class="bi bi-arrow-left-right me-1"></i> Movimientos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Gasto" asp-action="Index">
                                <i class="bi bi-cash-stack me-1"></i> Gastos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AlertaInventario" asp-action="Index">
                                <i class="bi bi-bell me-1"></i> Alertas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ConfiguracionNegocio" asp-action="Index">
                                <i class="bi bi-gear me-1"></i> Configuración
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Remove loading animation after page loads
        window.addEventListener('load', function() {
            setTimeout(function() {
                document.querySelector('.page-loader').style.display = 'none';
            }, 500);
        });

        // Active nav link highlighting
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(link => {
                const href = link.getAttribute('href');
                if (href && currentPath.includes(href) && href !== '/') {
                    link.classList.add('active');
                } else if (href === '/' && currentPath === '/') {
                    link.classList.add('active');
                }
            });
        });

        // Smooth scroll behavior
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>