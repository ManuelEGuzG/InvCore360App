@model InvCore360_App.Model.Models.Gasto

@{
    ViewData["Title"] = "Eliminar Gasto";
}

<h1>Eliminar Gasto</h1>

<dl class="row">
    <dt class="col-sm-2">Concepto</dt>
    <dd class="col-sm-10">@Model.Concepto</dd>

    <dt class="col-sm-2">Monto</dt>
    <dd class="col-sm-10">@Model.Monto.ToString("C")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="GastoID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>