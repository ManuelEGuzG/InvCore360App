@model InvCore360_App.Model.Models.HistorialPrecio

@{
    ViewData["Title"] = "Eliminar HistorialPrecio";
}

<h1>Eliminar Registro</h1>

<div>
    <h4>HistorialPrecio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Producto</dt>
        <dd class="col-sm-10">@Model.Producto?.Nombre</dd>

        <dt class="col-sm-2">Fecha Cambio</dt>
        <dd class="col-sm-10">@Model.FechaCambio.ToString("g")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="HistorialID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>