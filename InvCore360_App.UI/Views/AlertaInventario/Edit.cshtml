@model InvCore360_App.Model.Models.AlertaInventario

@{
    ViewData["Title"] = "Editar Alerta";
}

<h1>Editar Alerta</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AlertaID" />
    <div class="form-group">
        <label asp-for="ProductoID"></label>
        <select asp-for="ProductoID" class="form-control" asp-items="ViewBag.Productos"></select>
    </div>
    <div class="form-group">
        <label asp-for="TipoAlerta"></label>
        <input asp-for="TipoAlerta" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StockActual"></label>
        <input asp-for="StockActual" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StockMinimo"></label>
        <input asp-for="StockMinimo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EstadoAlerta"></label>
        <input asp-for="EstadoAlerta" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}