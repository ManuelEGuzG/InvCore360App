@model IEnumerable<InvCore360_App.Model.Models.AlertaInventario>

@{
    ViewData["Title"] = "Alertas de Inventario";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="config-premium">
    <div class="config-hero mb-5">
        <div class="hero-pattern"></div>
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <div class="hero-content">
                        <div class="breadcrumb-badge mb-3">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <span class="mx-2">/</span>
                            <span>Alertas de Inventario</span>
                        </div>
                        <h1 class="display-4 fw-bold mb-2 gradient-text">
                            <i class="bi bi-bell-fill me-3"></i>Gestión de Alertas
                        </h1>
                        <p class="lead text-muted mb-0">Monitorea y gestiona las alertas de stock de tu inventario</p>
                    </div>
                </div>
                <div class="col-lg-4 text-lg-end mt-4 mt-lg-0">
                    <a class="btn-premium btn-create" asp-action="Create">
                        <span class="btn-glow"></span>
                        <i class="bi bi-plus-circle-fill me-2"></i>
                        <span>Nueva Alerta</span>
                        <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="stats-section mb-5">
        <div class="row g-4">
            <div class="col-md-3">
                <div class="stat-card stat-primary">
                    <div class="stat-icon">
                        <i class="bi bi-bell"></i>
                    </div>
                    <div class="stat-details">
                        <h6>Total Alertas</h6>
                        <h3>@Model.Count()</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card stat-danger">
                    <div class="stat-icon">
                        <i class="bi bi-exclamation-octagon-fill"></i>
                    </div>
                    <div class="stat-details">
                        <h6>Críticas</h6>
                        <h3>@Model.Count(a => a.TipoAlerta == "Crítico")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card stat-warning">
                    <div class="stat-icon">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                    </div>
                    <div class="stat-details">
                        <h6>Advertencia</h6>
                        <h3>@Model.Count(a => a.TipoAlerta == "Advertencia")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card stat-success">
                    <div class="stat-icon">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <div class="stat-details">
                        <h6>Resueltas</h6>
                        <h3>@Model.Count(a => a.EstadoAlerta == "Resuelta")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="table-section">
        <div class="table-card">
            <div class="table-header">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div>
                        <h5 class="table-title mb-1">
                            <i class="bi bi-list-ul me-2"></i>Listado de Alertas
                        </h5>
                        <p class="table-subtitle mb-0">@Model.Count() alertas registradas</p>
                    </div>
                    <div class="table-actions">
                        <div class="search-box">
                            <i class="bi bi-search"></i>
                            <input type="text" id="searchInput" placeholder="Buscar alerta..." class="form-control">
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                @if (Model.Any())
                {
                    <table class="table-premium" id="alertTable">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Tipo Alerta</th>
                                <th>Stock Actual</th>
                                <th>Stock Mínimo</th>
                                <th>Fecha Alerta</th>
                                <th>Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="item-icon icon-danger">
                                                <i class="bi bi-box-seam"></i>
                                            </div>
                                            <div>
                                                <div class="item-title">@item.Producto?.Nombre</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.TipoAlerta == "Crítico")
                                        {
                                            <span class="alert-type type-critical">
                                                <i class="bi bi-exclamation-octagon-fill me-1"></i>Crítico
                                            </span>
                                        }
                                        else if (item.TipoAlerta == "Advertencia")
                                        {
                                            <span class="alert-type type-warning">
                                                <i class="bi bi-exclamation-triangle-fill me-1"></i>Advertencia
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="alert-type type-info">
                                                <i class="bi bi-info-circle-fill me-1"></i>@item.TipoAlerta
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <span class="stock-badge stock-actual">
                                            @item.StockActual unidades
                                        </span>
                                    </td>
                                    <td>
                                        <span class="stock-badge stock-minimum">
                                            @item.StockMinimo unidades
                                        </span>
                                    </td>
                                    <td>
                                        <div class="small text-muted">
                                            <i class="bi bi-calendar3 me-1"></i>
                                            @item.FechaAlerta.ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.EstadoAlerta == "Activa" || item.EstadoAlerta == "Pendiente")
                                        {
                                            <span class="status-badge status-active">
                                                <i class="bi bi-clock-fill me-1"></i>@item.EstadoAlerta
                                            </span>
                                        }
                                        else if (item.EstadoAlerta == "Resuelta")
                                        {
                                            <span class="status-badge status-resolved">
                                                <i class="bi bi-check-circle-fill me-1"></i>Resuelta
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="status-badge status-inactive">
                                                <i class="bi bi-x-circle-fill me-1"></i>@item.EstadoAlerta
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a class="btn-action btn-action-info" asp-action="Details" asp-route-id="@item.AlertaID" title="Ver Detalles">
                                                <i class="bi bi-eye-fill"></i>
                                            </a>
                                            <a class="btn-action btn-action-warning" asp-action="Edit" asp-route-id="@item.AlertaID" title="Editar">
                                                <i class="bi bi-pencil-fill"></i>
                                            </a>
                                            <a class="btn-action btn-action-danger" asp-action="Delete" asp-route-id="@item.AlertaID" title="Eliminar">
                                                <i class="bi bi-trash-fill"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-icon">
                            <i class="bi bi-bell-slash"></i>
                        </div>
                        <h4>No hay alertas registradas</h4>
                        <p>Comienza a monitorear tu inventario creando una nueva alerta.</p>
                        <a class="btn-premium btn-create mt-3" asp-action="Create">
                            <span class="btn-glow"></span>
                            <i class="bi bi-plus-circle-fill me-2"></i>
                            <span>Crear Alerta</span>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --success: #10b981;
        --success-dark: #059669;
        --info: #3b82f6;
        --info-dark: #2563eb;
        --warning: #f59e0b;
        --warning-dark: #d97706;
        --danger: #ef4444;
        --danger-dark: #dc2626;
        --purple: #8b5cf6;
        --shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        --shadow-lg: 0 20px 60px rgba(0, 0, 0, 0.12);
    }

    .config-premium {
        max-width: 1400px;
        margin: 0 auto;
    }

    /* Hero */
    .config-hero {
        background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
        border-radius: 28px;
        padding: 2.5rem;
        box-shadow: var(--shadow);
        position: relative;
        overflow: hidden;
    }

    .hero-pattern {
        position: absolute;
        top: 0;
        right: 0;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, rgba(239, 68, 68, 0.1) 0%, transparent 70%);
        border-radius: 50%;
    }

    .breadcrumb-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.5rem 1rem;
        background: linear-gradient(135deg, #fee2e2 0%, #fef3c7 100%);
        border-radius: 50px;
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--danger);
    }

    .gradient-text {
        background: linear-gradient(135deg, var(--danger) 0%, var(--warning) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Buttons */
    .btn-premium {
        position: relative;
        display: inline-flex;
        align-items: center;
        padding: 1rem 2rem;
        background: linear-gradient(135deg, var(--primary) 0%, var(--purple) 100%);
        color: white;
        border-radius: 16px;
        font-weight: 600;
        overflow: hidden;
        transition: all 0.4s ease;
        border: none;
        box-shadow: 0 8px 25px rgba(99, 102, 241, 0.3);
        text-decoration: none;
    }

        .btn-premium:hover {
            transform: translateY(-3px);
            color: white;
            box-shadow: 0 12px 35px rgba(99, 102, 241, 0.4);
        }

    .btn-glow {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
        transition: left 0.6s ease;
    }

    .btn-premium:hover .btn-glow {
        left: 100%;
    }

    /* Cards */
    .stat-card {
        background: white;
        border-radius: 20px;
        padding: 1.75rem;
        box-shadow: var(--shadow);
        display: flex;
        align-items: center;
        gap: 1.5rem;
        transition: all 0.3s ease;
        animation: fadeInUp 0.6s ease-out backwards;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
        }

    .stat-icon {
        width: 70px;
        height: 70px;
        border-radius: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        color: white;
    }

    .stat-primary .stat-icon {
        background: linear-gradient(135deg, var(--primary) 0%, #818cf8 100%);
    }

    .stat-success .stat-icon {
        background: linear-gradient(135deg, var(--success) 0%, #34d399 100%);
    }

    .stat-danger .stat-icon {
        background: linear-gradient(135deg, var(--danger) 0%, #f87171 100%);
    }

    .stat-warning .stat-icon {
        background: linear-gradient(135deg, var(--warning) 0%, #fbbf24 100%);
    }

    .stat-details h6 {
        color: #64748b;
        font-size: 0.875rem;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 0.5rem;
    }

    .stat-details h3 {
        color: #0f172a;
        font-size: 2rem;
        font-weight: 800;
        margin: 0;
    }

    /* Table Section */
    .table-card {
        background: white;
        border-radius: 24px;
        box-shadow: var(--shadow);
        overflow: hidden;
        animation: fadeInUp 0.6s ease-out 0.4s backwards;
    }

    .table-header {
        padding: 2rem;
        background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
        border-bottom: 2px solid #f1f5f9;
    }

    .table-title {
        font-weight: 700;
        font-size: 1.25rem;
        color: #0f172a;
    }

    .search-box {
        position: relative;
        width: 300px;
    }

        .search-box i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
        }

        .search-box input {
            width: 100%;
            padding: 0.75rem 1rem 0.75rem 2.75rem;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
        }

    /* Table Design */
    .table-premium {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .table-premium thead th {
            background: #f8fafc;
            padding: 1.25rem 1.5rem;
            font-weight: 700;
            font-size: 0.875rem;
            text-transform: uppercase;
            color: #475569;
            border-bottom: 2px solid #e2e8f0;
        }

        .table-premium tbody td {
            padding: 1.5rem 1.5rem;
            vertical-align: middle;
            border-bottom: 1px solid #f1f5f9;
        }

        .table-premium tbody tr:hover {
            background: #f8fafc;
        }

    .item-icon {
        width: 45px;
        height: 45px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    .icon-danger {
        background: rgba(239, 68, 68, 0.1);
        color: var(--danger);
    }

    .item-title {
        font-weight: 600;
        color: #0f172a;
    }

    /* Alert Type Badges */
    .alert-type {
        display: inline-flex;
        align-items: center;
        padding: 0.5rem 1rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .type-critical {
        background: #fee2e2;
        color: var(--danger-dark);
    }

    .type-warning {
        background: #fef3c7;
        color: var(--warning-dark);
    }

    .type-info {
        background: #dbeafe;
        color: var(--info-dark);
    }

    /* Stock Badges */
    .stock-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.4rem 0.8rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.813rem;
    }

    .stock-actual {
        background: #e0e7ff;
        color: var(--primary-dark);
    }

    .stock-minimum {
        background: #fef3c7;
        color: var(--warning-dark);
    }

    /* Status Badges */
    .status-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.5rem 1rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .status-active {
        background: #fef3c7;
        color: var(--warning-dark);
    }

    .status-resolved {
        background: #d1fae5;
        color: var(--success-dark);
    }

    .status-inactive {
        background: #f1f5f9;
        color: #64748b;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 0.5rem;
        justify-content: flex-end;
    }

    .btn-action {
        width: 38px;
        height: 38px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-action-info {
        background: #dbeafe;
        color: var(--info);
    }

        .btn-action-info:hover {
            background: var(--info);
            color: white;
            transform: translateY(-3px);
        }

    .btn-action-warning {
        background: #fef3c7;
        color: var(--warning-dark);
    }

        .btn-action-warning:hover {
            background: var(--warning);
            color: white;
            transform: translateY(-3px);
        }

    .btn-action-danger {
        background: #fee2e2;
        color: var(--danger);
    }

        .btn-action-danger:hover {
            background: var(--danger);
            color: white;
            transform: translateY(-3px);
        }

    .empty-state {
        text-align: center;
        padding: 5rem 2rem;
    }

    .empty-icon {
        font-size: 4rem;
        color: #cbd5e1;
        margin-bottom: 1.5rem;
    }

    keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    media (max-width: 768px) {
        .search-box {
            width: 100%;
        }

        .table-premium thead {
            display: none;
        }

        .table-premium tbody tr {
            display: block;
            margin-bottom: 1rem;
            border: 1px solid #f1f5f9;
            border-radius: 16px;
        }

        .table-premium tbody td {
            display: block;
            text-align: left;
            border-bottom: 1px solid #f1f5f9;
        }

        .action-buttons {
            justify-content: flex-start;
        }
    }
</style>

<script>
    // Buscador en tiempo real
    document.getElementById('searchInput')?.addEventListener('keyup', function () {
        const value = this.value.toLowerCase();
        document.querySelectorAll('#alertTable tbody tr').forEach(row => {
            row.style.display = row.textContent.toLowerCase().includes(value) ? '' : 'none';
        });
    });
</script>