@model InvCore360_App.Model.Models.AlertaInventario

@{
    ViewData["Title"] = "Eliminar Alerta";
}

<h1>Eliminar Alerta</h1>

<dl class="row">
    <dt class="col-sm-2">Producto</dt>
    <dd class="col-sm-10">@Model.Producto?.Nombre</dd>

    <dt class="col-sm-2">Tipo</dt>
    <dd class="col-sm-10">@Model.TipoAlerta</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AlertaID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>